<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1820.HomePage">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#ffffff" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid x:Name="ContentHeader">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackLayout x:Name="PracticeStackLayout" Grid.Row="0" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" BackgroundColor="#68B6F2" HeightRequest="20" Padding="10,5,0,10" Margin="0,0,0,0" Spacing="0">
                    <Label x:Name="PracticeName" Text="Robotic Prolapse Surgery" TextColor="#ffffff" FontSize="18"  />
                </StackLayout>
                <StackLayout x:Name="PageStackLayout" Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" BackgroundColor="#d7d7d7" HeightRequest="22" Padding="10" Margin="0,-6,0,0" Spacing="0">
                    <Label x:Name="PageName" Text="Home Page" TextColor="#154360" FontSize="16"  />
                    <!--<Label x:Name="ProcedureName" Text="Robotic Prolapse Surgery" TextColor="#154360" FontSize="16" />-->
                </StackLayout>
            </Grid>
            <Grid x:Name="ContentBody">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollView x:Name="ContentBodyScrollView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <StackLayout Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        <!-- Place new controls here -->
                        <Label x:Name="AndroidLabel" IsVisible="False" Text="Welcome to Android Xamarin.Forms!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

                        <Label x:Name="iOSLabel" IsVisible="False" Text="Welcome to iOS Xamarin.Forms!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

                        <Label x:Name="UWPLabel" IsVisible="False" Text="Welcome to UWP Xamarin.Forms!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </ScrollView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>